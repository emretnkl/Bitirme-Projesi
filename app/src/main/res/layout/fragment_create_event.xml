<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/frameLayoutCreate"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragment.CreateEventFragment">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/floatingButtonColor"
            android:text="@string/app_name"
            android:gravity="center"
            android:textSize="32sp"
            app:fontFamily="@font/lobster_new"
            android:orientation="vertical" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2"/>

    <EditText
            android:id="@+id/etkinlikAdiKayit"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_design"
            android:ems="10"
            android:hint="Etkinlik Adı"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/floatingButtonColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.25"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

    <EditText
            android:id="@+id/etkinlikAciklamaKayit"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_design"
            android:ems="10"
            android:hint="Etkinlik Açıklama"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/floatingButtonColor"
            app:layout_constraintEnd_toEndOf="@+id/etkinlikAdiKayit"
            app:layout_constraintStart_toStartOf="@+id/etkinlikAdiKayit"
            app:layout_constraintTop_toBottomOf="@+id/etkinlikAdiKayit" app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:id="@+id/etkinlikAdresKayit"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_design"
            android:ems="10"
            android:hint="Etkinlik Adresi"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/floatingButtonColor"
            app:layout_constraintEnd_toEndOf="@+id/etkinlikAciklamaKayit"
            app:layout_constraintStart_toStartOf="@+id/etkinlikAciklamaKayit"
            app:layout_constraintTop_toBottomOf="@+id/etkinlikAciklamaKayit"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:id="@+id/etkinlikOrganizatorKayit"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_design"
            android:ems="10"
            android:hint="Etkinlik Organizatörü"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/floatingButtonColor"
            app:layout_constraintEnd_toEndOf="@+id/etkinlikAdresKayit"
            app:layout_constraintStart_toStartOf="@+id/etkinlikAdresKayit"
            app:layout_constraintTop_toBottomOf="@+id/etkinlikAdresKayit" app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
        android:id="@+id/etkinlikTarihKayit"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_design"
        android:ems="10"
        android:hint="Etkinlik Tarihi"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColorHint="@color/floatingButtonColor"
        app:layout_constraintEnd_toEndOf="@+id/etkinlikOrganizatorKayit"
        app:layout_constraintStart_toStartOf="@+id/etkinlikOrganizatorKayit"
        app:layout_constraintTop_toBottomOf="@+id/etkinlikOrganizatorKayit"
        app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:id="@+id/etkinlikFotoKayit"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_design"
            android:ems="10"
            android:hint="Etkinlik Foto URL"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/floatingButtonColor"
            app:layout_constraintEnd_toEndOf="@+id/etkinlikTarihKayit"
            app:layout_constraintStart_toStartOf="@+id/etkinlikTarihKayit"
            app:layout_constraintTop_toBottomOf="@+id/etkinlikTarihKayit"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:id="@+id/etkinlikKaydetBtn"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/button_design"
            android:text="Oluştur"
            android:textColor="@color/floatingButtonColor"
            app:layout_constraintEnd_toEndOf="@+id/etkinlikFotoKayit"
            app:layout_constraintStart_toStartOf="@+id/etkinlikFotoKayit"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etkinlikFotoKayit"
            android:layout_marginTop="8dp"/>


    <TextView
            android:text="Etkinlik Oluştur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/etkinlikAdiKayit" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textColor="#3145B9" android:textSize="36sp"
            android:textColorLink="#3F51B5" tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
</android.support.constraint.ConstraintLayout>